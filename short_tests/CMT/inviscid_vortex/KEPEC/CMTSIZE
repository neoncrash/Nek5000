      integer toteq
      parameter (toteq=5)              ! number of conserved variables. used to be in SIZE

! indices for fields vectorized (quantity-outermost) parameter vectors
      integer jux, juy, juz, jpr, jthm, jsnd, jph, ju5, nqq

! Chandrashekar (2013) KEPEC
!     parameter (jux  =1)     ! u
!     parameter (juy  =2)     ! v
!     parameter (juz  =3)     ! w
!     parameter (jrhof=4)    ! rho on faces
!     parameter (jsnd =5)     ! a ! overwritten by rho in KG and other EP split forms
!     parameter (jthm =6)   ! Actually beta
!     parameter (jpr  =7)     ! P
!     parameter (ju5=8)     ! 1/(logmean of beta), then hhat
!     parameter (nqq=9) ! confusing, but wow. 18x(2+1) -> 7+1. What savings
!     parameter (jph  =nqq)   ! phi_g

! Chandrashekar (2013) KEPEC_duplicated quick and dirty test drive
      parameter (jrhof=1)     ! u
      parameter (jux =2)     ! u
      parameter (juy =3)     ! v
      parameter (juz =4)     ! w
      parameter (jpr =5)     ! P
      parameter (jsnd=6)     ! a
      parameter (ju5 =7)     ! U for LLF_vec
      parameter (nqq=8)
      parameter (jph  =nqq)   ! phi_g

! indices for sequentially-stored (quantity-innermost) parameter vectors
! used for waux in fluxdiv routines and w* in BC routines
      integer iux, iuy, iuz, ipr, ithm, isnd, iph, nparm
      parameter (iux =1)     ! u
      parameter (iuy =2)     ! v
      parameter (iuz =3)     ! w
      parameter (ipr =4)     ! P
      parameter (irho=5)     ! density rho
      parameter (ithm=6)     ! T
      parameter (isnd=7)     ! a
      parameter (iph =8)     ! phi_g
      parameter (nparm=8)

! /CMTSURFLX/ size declarations
!     integer lfq,heresize,hdsize
!     parameter (lfq=lx1*lz1*2*ldim*lelt,
!    >                   heresize=(nqq+toteq)*lfq, ! Chandrashekar
!    >                   hdsize=toteq*3*lfq) ! might not need ldim

! Legacy dealiased AUSM
! (fluxes_full_field_old)
! Chandrashekar (2013) KEPEC_duplicated quick and dirty test drive
! (fluxes_full_field_chold)
      integer lfq,heresize,hdsize
      parameter (lfq=lx1*lz1*2*ldim*lelt,
     >                   heresize=nqq*3*lfq, ! Chandrashekar quickndirty
     >                   hdsize=toteq*3*lfq) ! test drive
